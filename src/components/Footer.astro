---
// Footer component with video background and newsletter signup
// import NewsletterSignup from './NewsletterSignup.tsx'
---

<footer id="footer" class="relative w-full bg-black text-white overflow-hidden rounded-t-3xl">
  <!-- Video Background -->
  <div class="video-wrapper cover loading absolute inset-0 w-full h-full">
    <video
      autoplay
      muted
      loop
      playsinline
      preload="none"
      class="loaded w-full h-full object-cover opacity-100"
      style="--height: 1080; --width: 1920;"
    >
      <source src="https://videos.pexels.com/video-files/3245638/3245638-uhd_2560_1440_25fps.mp4" type="video/mp4" >
    </video>
  </div>



  <!-- Content Overlay -->
  <div class="relative z-10 w-full">
    <!-- Middle Section -->
    <div class="middle section">
      <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
          <!-- Left Column - Logo -->
          <div class="left">
            <a href="/" class="logo inline-block" aria-label="Movara">
              <h1 class="text-white font-bold font-display tracking-tight text-2xl sm:text-3xl lg:text-4xl">Movara</h1>
            </a>
          </div>

          <!-- Right Column - Navigation & Newsletter -->
          <div class="right">
            <!-- Navigation Links -->
            <ul class="footer-nav mb-6 lg:mb-8 grid grid-cols-2 gap-3 sm:gap-4">
              <li class="mb-3 sm:mb-4" style="--index:0;">
                <a href="/about" class="text-white hover:text-gray-300 transition-colors duration-200 font-display text-lg sm:text-xl lg:text-2xl">About</a>
              </li>
              <li class="mb-3 sm:mb-4" style="--index:1;">
                <a href="/latest" class="text-white hover:text-gray-300 transition-colors duration-200 font-display text-lg sm:text-xl lg:text-2xl">Latest</a>
              </li>
              <li class="mb-3 sm:mb-4" style="--index:3;">
                <a href="/contact" class="text-white hover:text-gray-300 transition-colors duration-200 font-display text-lg sm:text-xl lg:text-2xl">Contact</a>
              </li>
              <li class="mb-3 sm:mb-4" style="--index:4;">
                <a href="https://calendly.com/jmgichuki/30min" rel="noopener noreferrer" target="_blank" class="text-white hover:text-gray-300 transition-colors duration-200 flex items-center gap-2 font-display text-lg sm:text-xl lg:text-2xl">
                  Book Consultation
                  <svg width="12" height="11" viewBox="0 0 12 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path class="fill" d="M0.899902 5.05844H9.8249L5.4449 0.648438H6.9449L11.8499 5.59844L6.9299 10.5484H5.4299L9.82621 6.13844H0.899902V5.05844Z" fill="white" />
                  </svg>
                </a>
              </li>
            </ul>

            <!-- Newsletter Signup -->
            <!-- <NewsletterSignup client:visible /> -->
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="bottom px-4 sm:px-6 py-6 sm:py-8 border-t border-gray-800">
      <div class="container">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
          <p class="text-xs sm:text-sm text-gray-200">
            Copyright Â©2025 - Movara
          </p>
          <div class="flex flex-col md:flex-row gap-4 md:gap-8">
            <!-- <ul class="flex gap-4">
              <li>
                <a href="/legal/privacy-policy" class="text-xs sm:text-sm text-gray-200 hover:text-white transition-colors duration-200">
                  Privacy Policy
                </a>
              </li>
            </ul> -->
            <ul class="flex gap-4">
              <li>
                <a href="https://kiiyurus.space" target="_blank" class="text-xs sm:text-sm text-gray-200 hover:text-white transition-colors duration-200">
                  Site by Kiiyuru
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Footer specific styles */
  .video-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .video-wrapper video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Newsletter form styles */
  .newsletter-signup input:focus {
    outline: none;
    border-color: white;
    box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.1);
  }

  .newsletter-signup .error {
    color: var(--color-accent);
    font-size: 0.875rem;
    margin-top: 0.5rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .middle {
      padding: var(--spacing-lg) var(--spacing-sm);
    }

    .bottom {
      padding: var(--spacing-md) var(--spacing-sm);
    }

    .footer-nav {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .footer-nav li {
      margin-bottom: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .footer-nav {
      grid-template-columns: 1fr;
    }

    .bottom {
      text-align: center;
    }

    .bottom .flex-col {
      align-items: center;
    }
  }
</style>
